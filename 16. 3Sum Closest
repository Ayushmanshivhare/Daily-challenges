class Solution {
public:
    int threeSumClosest(vector<int>& nums, int target) {
        int n = nums.size(),mini=1e9,ans=0;
         sort(nums.begin(),nums.end());
         for(int i=0;i<n-2;i++){
              int j = i+1;
              int k = n-1;
             
             while(j<k){
              int x = nums[i]+nums[j]+nums[k];
              if(abs(x-target)<mini){
                   mini = abs(x-target);
                   ans = x;
                  }
                 
              if(x<target) j++;
              else k--;
                 }
              }
         return ans;
    }
};
